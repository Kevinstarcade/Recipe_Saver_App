@page "/recipes"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using Recipe_Saver_App.Models
@using Recipe_Saver_App.Data
@implements IAsyncDisposable
@inject IDbContextFactory<Recipe_Saver_App.Data.RecipesContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="recipes/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.Recipes">
    <PropertyColumn Property="recipe => recipe.RecipeName" />
    <PropertyColumn Property="recipe => recipe.VideoUrl" />
    <PropertyColumn Property="recipe => recipe.Platform" />
    <PropertyColumn Property="recipe => recipe.CuisineType" />
    <PropertyColumn Property="recipe => recipe.MealType" />
    @* <PropertyColumn Property="recipe => recipe.CaloriesPerServing" /> *@
    @* <PropertyColumn Property="recipe => recipe.FatPerServing" /> *@
    @* <PropertyColumn Property="recipe => recipe.CarbsPerServing" /> *@
    @* <PropertyColumn Property="recipe => recipe.ProteinPerServing" /> *@
    @* <PropertyColumn Property="recipe => recipe.IsFavourite" /> *@
    @* <PropertyColumn Property="recipe => recipe.PlanToCook" /> *@
    <PropertyColumn Property="recipe => recipe.Rating" />
    <PropertyColumn Property="recipe => recipe.LastMade" />
    <PropertyColumn Property="recipe => recipe.Notes" />

    <TemplateColumn Context="recipe">
        <a href="@($"recipes/edit?id={recipe.Id}")">Edit</a> |
        <a href="@($"recipes/details?id={recipe.Id}")">Details</a> |
        <a href="@($"recipes/delete?id={recipe.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private RecipesContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
